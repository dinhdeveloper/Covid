<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/navBottom"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/header"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15sp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="start">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_menu" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_bell" />
                </LinearLayout>
            </LinearLayout>
            <!--end-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="start">

                    <TextView
                        android:fontFamily="@font/roboto_black"
                        android:text="Covid-19"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/whiles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/custom_background_item_border"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="right">

                    <ImageView
                        android:layout_marginHorizontal="8dp"
                        android:layout_gravity="center"
                        android:src="@drawable/vietnam_2"
                        android:layout_weight="1"
                        android:layout_width="60dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:textColor="#0D1333"
                        android:fontFamily="@font/roboto_black"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Viá»‡t Nam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
            <!--end-->
            <TextView
                android:fontFamily="@font/roboto_black"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:text="Are you feeling sick?"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/whiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/roboto_light"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:text="If you feel sick with any of covid-19 symptoms please call or SMS us immediately for help."
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="@color/whiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--end-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/custom_bacground_call"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:fontFamily="@font/roboto_black"
                        android:textColor="@color/whiles"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="10dp"
                        android:text="Call now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:paddingHorizontal="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/custom_background_send"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_message_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:fontFamily="@font/roboto_black"
                        android:textColor="@color/whiles"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="10dp"
                        android:text="Send SMS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--end-->
        <LinearLayout
            android:layout_marginVertical="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>